			end

			function Create_Function:CodeBox(options)
				task.wait()

				local Click_Frame = Instance.new("Frame", Group_Frame)
				Click_Frame.Name = "CodeBox_Wrapper"
				Click_Frame.BackgroundTransparency = 1
				-- [UPDATED] เริ่มต้นที่ความสูง 35 แต่ปล่อยให้ขยายตามแกน Y อัตโนมัติ
				Click_Frame.Size = UDim2.new(0, 208, 0, 35) 
				Click_Frame.AutomaticSize = Enum.AutomaticSize.Y

				local BGFrame = Instance.new("Frame", Click_Frame)
				BGFrame.Name = "BGFrame"
				BGFrame.BackgroundColor3 = Color3.new(1, 1, 1)
				BGFrame.BackgroundTransparency = 0.9
				BGFrame.Position = UDim2.new(0.019, 0, 0, 3)
				BGFrame.Size = UDim2.new(0.96, 0, 0, 0)
				-- [UPDATED] ใช้ AutomaticSize เพื่อให้พื้นหลังยืดตามเนื้อหาโค้ด
				BGFrame.AutomaticSize = Enum.AutomaticSize.Y
				Instance.new("UICorner", BGFrame).CornerRadius = UDim.new(0, 6)

				-- ข้อจำกัดขนาดขั้นต่ำ (MinSize) เพื่อให้ดูเข้าพวกกับปุ่มอื่น
				local MinSize = Instance.new("UISizeConstraint", BGFrame)
				MinSize.MinSize = Vector2.new(0, 30) 

				-- แถบสีม่วงด้านซ้าย (ยืดตามความสูงของโค้ด)
				local ColorFrame = Instance.new("Frame", BGFrame)
				ColorFrame.Name = "ColorFrame"
				ColorFrame.BackgroundColor3 = Color3.new(0.56, 0.3, 1)
				ColorFrame.Position = UDim2.new(0, 0, 0, 5)
				ColorFrame.Size = UDim2.new(0, 4, 1, -10) -- ใช้ Scale 1 เพื่อให้ยาวตาม BG
				Instance.new("UICorner", ColorFrame).CornerRadius = UDim.new(0, 4)

				local CodeBG = Instance.new("Frame", BGFrame)
				CodeBG.Name = "CodeBG"
				CodeBG.BackgroundColor3 = Color3.new(0.05, 0.01, 0.1)
				CodeBG.BackgroundTransparency = 0.5
				CodeBG.Position = UDim2.new(0, 10, 0, 5)
				CodeBG.Size = UDim2.new(1, -15, 0, 0)
				CodeBG.AutomaticSize = Enum.AutomaticSize.Y
				Instance.new("UICorner", CodeBG).CornerRadius = UDim.new(0, 4)

				local TextLabel = Instance.new("TextLabel", CodeBG)
				TextLabel.Name = "CodeText"
				TextLabel.BackgroundTransparency = 1
				TextLabel.Size = UDim2.new(1, -10, 0, 0)
				TextLabel.Position = UDim2.new(0, 5, 0, 5)
				TextLabel.Font = Enum.Font.Code -- ใช้ Font แบบ Code เพื่อความสวยงาม
				TextLabel.TextColor3 = Color3.fromRGB(220, 220, 220)
				TextLabel.TextSize = TextSize
				TextLabel.TextTruncate = Enum.TextTruncate.AtEnd
				TextLabel.TextXAlignment = Enum.TextXAlignment.Left
				TextLabel.TextYAlignment = Enum.TextYAlignment.Top
				TextLabel.TextWrapped = true -- ให้ตัวอักษรขึ้นบรรทัดใหม่เมื่อยาวเกิน
				TextLabel.AutomaticSize = Enum.AutomaticSize.Y

				-- เพิ่ม Padding ด้านล่างเพื่อให้ดูไม่อึดอัด
